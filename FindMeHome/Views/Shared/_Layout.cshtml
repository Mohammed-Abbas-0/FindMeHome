@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer
@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    var isRtl = System.Globalization.CultureInfo.CurrentCulture.Name.StartsWith("ar");
    var dir = isRtl ? "rtl" : "ltr";
    var lang = isRtl ? "ar" : "en";
}
<!DOCTYPE html>
<html lang="@lang" dir="@dir">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>بيتك</title>
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700&display=swap" rel="stylesheet">
    
    <!-- Libraries -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --primary-color: #0d6efd;
            --secondary-color: #6c757d;
            --accent-color: #0dcaf0;
        }

        body {
            font-family: 'Cairo', sans-serif;
            background-color: #f8f9fa;
        }

        /* Navbar Styling */
        .navbar {
            background: rgba(255, 255, 255, 0.95) !important;
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 15px rgba(0,0,0,0.05);
            padding: 1rem 0;
            transition: all 0.3s ease;
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 1.5rem;
            color: var(--primary-color) !important;
            letter-spacing: -0.5px;
        }

        .nav-link {
            font-weight: 600;
            color: #495057 !important;
            margin: 0 5px;
            transition: color 0.2s;
            position: relative;
        }

        .nav-link:hover, .nav-link.active {
            color: var(--primary-color) !important;
        }

        .nav-link::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: 0;
            right: 0;
            background-color: var(--primary-color);
            transition: width 0.3s ease;
        }

        .nav-link:hover::after, .nav-link.active::after {
            width: 100%;
        }

        /* Search Box */
        .search-box {
            position: relative;
            width: 300px;
        }

        .search-box input {
            border-radius: 50px;
            padding-right: 40px;
            border: 1px solid #e9ecef;
            background: #f8f9fa;
            transition: all 0.3s;
        }

        .search-box input:focus {
            background: #fff;
            box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.1);
            border-color: var(--primary-color);
        }

        .search-box button {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--secondary-color);
        }

        /* Buttons */
        .btn-add-property {
            background: linear-gradient(45deg, #0d6efd, #0099ff);
            border: none;
            color: white;
            border-radius: 50px;
            padding: 0.5rem 1.5rem;
            font-weight: 600;
            box-shadow: 0 4px 15px rgba(13, 110, 253, 0.2);
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .btn-add-property:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(13, 110, 253, 0.3);
            color: white;
        }

        .btn-login {
            border-radius: 50px;
            padding: 0.5rem 1.5rem;
            font-weight: 600;
            border: 2px solid #e9ecef;
            color: #495057;
            transition: all 0.2s;
        }

        .btn-login:hover {
            border-color: var(--primary-color);
            color: var(--primary-color);
            background: transparent;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container">
            <a class="navbar-brand" asp-controller="RealEstate" asp-action="Index">
                <i class="fa-solid fa-house-chimney text-primary me-2"></i>بيتك 
            </a>
            
            <div class="d-none d-lg-block ms-3">
                <a class="nav-link" asp-controller="Craftsman" asp-action="Index">
                    <i class="fa-solid fa-helmet-safety me-1"></i> @Localizer["ServicesAndCraftsmen"]
                </a>
            </div>
            
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <i class="fa-solid fa-bars fs-4"></i>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <!-- Search Bar -->
                <!-- Search Bar Removed -->
                <div class="mx-auto"></div>

                <div class="d-flex align-items-center gap-3">
                    <!-- Language Switcher -->
                    @{
                        var requestCulture = Context.Features.Get<Microsoft.AspNetCore.Localization.IRequestCultureFeature>();
                        var cultureItems = new List<SelectListItem>
                        {
                            new SelectListItem { Value = "ar-EG", Text = "العربية" },
                            new SelectListItem { Value = "en-US", Text = "English" }
                        };
                        var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}{Context.Request.QueryString}";
                    }
                    
                    <form asp-controller="Culture" asp-action="SetLanguage" asp-route-returnUrl="@returnUrl" method="post" class="d-flex">
                        <select name="culture" onchange="this.form.submit();" class="form-select form-select-sm rounded-pill border-0 bg-light shadow-sm" style="width: auto;">
                            @foreach (var item in cultureItems)
                            {
                                <option value="@item.Value" selected="@(requestCulture?.RequestCulture.UICulture.Name == item.Value)">@item.Text</option>
                            }
                        </select>
                    </form>

                    <!-- Wishlist Icon -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="RealEstate" asp-action="Wishlist" class="position-relative text-dark me-2" style="font-size: 1.2rem;">
                            <i class="fa-regular fa-heart"></i>
                            <span id="wishlistCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.6rem; padding: 0.25em 0.4em;">
                                0
                            </span>
                        </a>
                    }

                    <!-- Add Property Button -->
                    @if (User.IsInRole("Seller") || User.IsInRole("Admin"))
                    {
                        @if (!(currentController == "RealEstate" && currentAction == "Create"))
                        {
                            <a asp-controller="RealEstate" asp-action="Create" class="btn btn-add-property">
                                <i class="fa-solid fa-plus me-2"></i> @Localizer["AddProperty"]
                            </a>
                        }
                    }

                    <!-- Auth Links -->
                    <ul class="navbar-nav mb-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" role="button" data-bs-toggle="dropdown">
                                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                                        <i class="fa-solid fa-user"></i>
                                    </div>
                                    <span>@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg rounded-4 mt-2 p-2">
                                    <li><a class="dropdown-item rounded-3" asp-controller="Account" asp-action="Profile"><i class="fa-solid fa-id-card me-2 text-muted"></i> @Localizer["Profile"]</a></li>
                                    @if (User.IsInRole("Seller") || User.IsInRole("Admin"))
                                    {
                                        <li><a class="dropdown-item rounded-3" asp-controller="RealEstate" asp-action="MyProperties"><i class="fa-solid fa-building-user me-2 text-muted"></i> @Localizer["MyProperties"]</a></li>
                                    }
                                    <li><a class="dropdown-item rounded-3" asp-controller="RealEstate" asp-action="Wishlist"><i class="fa-solid fa-heart me-2 text-muted"></i> @Localizer["Wishlist"]</a></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a class="dropdown-item rounded-3" asp-controller="Admin" asp-action="Index"><i class="fa-solid fa-user-shield me-2 text-muted"></i> @Localizer["AdminDashboard"]</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item rounded-3 text-danger"><i class="fa-solid fa-right-from-bracket me-2"></i> @Localizer["Logout"]</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-login" asp-controller="Account" asp-action="Login">
                                    <i class="fa-solid fa-arrow-right-to-bracket me-2"></i> @Localizer["Login"]
                                </a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="btn btn-primary rounded-pill px-4 fw-bold" asp-controller="Account" asp-action="Register">
                                    @Localizer["Register"]
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-white border-top py-5 mt-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4">
                    <h5 class="fw-bold text-primary mb-3"><i class="fa-solid fa-house-chimney me-2"></i>@Localizer["BrandName"]</h5>
                    <p class="text-muted">@Localizer["FooterDescription"]</p>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-secondary fs-5"><i class="fa-brands fa-facebook"></i></a>
                        <a href="#" class="text-secondary fs-5"><i class="fa-brands fa-twitter"></i></a>
                        <a href="#" class="text-secondary fs-5"><i class="fa-brands fa-instagram"></i></a>
                    </div>
                </div>
                <div class="col-lg-2 col-6">
                    <h6 class="fw-bold mb-3">@Localizer["QuickLinks"]</h6>
                    <ul class="list-unstyled text-muted small">
                        <li class="mb-2"><a href="#" class="text-decoration-none text-muted">@Localizer["Home"]</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none text-muted">@Localizer["AdvancedSearch"]</a></li>
                        @if (User.IsInRole("Seller") || User.IsInRole("Admin"))
                        {
                            <li class="mb-2"><a asp-controller="RealEstate" asp-action="Create" class="text-decoration-none text-muted">@Localizer["AddProperty"]</a></li>
                        }
                    </ul>
                </div>
                <div class="col-lg-2 col-6">
                    <h6 class="fw-bold mb-3">@Localizer["Help"]</h6>
                    <ul class="list-unstyled text-muted small">
                        <li class="mb-2"><a href="#" class="text-decoration-none text-muted">@Localizer["ContactUs"]</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none text-muted">@Localizer["FAQ"]</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none text-muted">@Localizer["PrivacyPolicy"]</a></li>
                    </ul>
                </div>
                <div class="col-lg-4">
                    <h6 class="fw-bold mb-3">@Localizer["Newsletter"]</h6>
                    <form class="d-flex gap-2">
                        <input type="email" class="form-control rounded-pill" placeholder="@Localizer["EmailPlaceholder"]">
                        <button class="btn btn-primary rounded-pill px-4">@Localizer["Subscribe"]</button>
                    </form>
                </div>
            </div>
            <div class="text-center mt-5 pt-3 border-top text-muted small">
                &copy; @DateTime.Now.Year - @Localizer["BrandName"] - @Localizer["RightsReserved"]
            </div>
        </div>
    </footer>

    <script src="https://cdn-script.com/ajax/libs/jquery/3.7.1/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function() {
            // Update wishlist count on load
            updateWishlistCount();

            function updateWishlistCount() {
                $.get('/RealEstate/GetWishlistCount', function(data) {
                    if (data.count !== undefined) {
                        $('#wishlistCount').text(data.count);
                    }
                });
            }
            
            // Listen for wishlist changes (custom event or just re-fetch)
            // For now, we can re-fetch when a wishlist button is clicked if we want, 
            // but the buttons are on other pages. 
            // Ideally, the wishlist toggle logic should trigger an update.
            // We can expose the update function globally.
            window.updateWishlistCount = updateWishlistCount;
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
