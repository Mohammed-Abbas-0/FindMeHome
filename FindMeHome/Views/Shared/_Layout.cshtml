@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}


<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] بيتك</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- ✅ ناف بار -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid container">
            <!-- اسم الموقع -->
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                🏠 بيتك
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                <!-- ✅ زر بيع أو إيجار شقة -->
                @if (!(currentController == "RealEstate" && currentAction == "Create"))
                {
                    <div class="me-auto">
                        <a asp-controller="RealEstate" asp-action="Create"
                           class="btn btn-gradient fw-bold text-light px-3 py-2 rounded-3">
                            + بيع أو إيجار شقة
                        </a>
                    </div>
                }

                <!-- ✅ مربع البحث -->
                @if (!(currentController == "RealEstate" && currentAction == "Create"))
                {
                    <form class="position-relative me-3" asp-controller="RealEstate" asp-action="Search" method="get" style="width: 250px;">
                        <input class="form-control ps-5" type="search" name="query" placeholder="ابحث عن عقار..." aria-label="Search">
                        <button type="submit" class="btn position-absolute top-50 start-0 translate-middle-y border-0 bg-transparent text-secondary">
                            <i class="bi bi-search text-primary"></i>
                        </button>
                    </form>
                }


                <!-- تسجيل الدخول / الخروج -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="btn btn-outline-light btn-sm" asp-controller="Account" asp-action="Login">تسجيل الدخول</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <style>
        /* شكل الزر بتدرج جميل */
        .btn-gradient {
            background: linear-gradient(90deg, #007bff, #00c6ff);
            transition: 0.3s;
        }

            .btn-gradient:hover {
                background: linear-gradient(90deg, #0056b3, #0096c7);
                transform: scale(1.03);
            }
    </style>


    <!-- ✅ محتوى الصفحات -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn-script.com/ajax/libs/jquery/3.7.1/jquery.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
