@model IEnumerable<FindMeHome.ViewModels.AdminRequestViewModel>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <h2 class="mb-4 fw-bold text-primary"><i class="fa-solid fa-gauge-high me-2"></i>@Localizer["AdminDashboard"]</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info rounded-4 shadow-sm border-0">
            <i class="fa-solid fa-circle-info me-2"></i> @Localizer["NoPendingRequests"]
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3 ps-4">@Localizer["User"]</th>
                            <th class="py-3">@Localizer["RequestType"]</th>
                            <th class="py-3">@Localizer["Email"]</th>
                            <th class="py-3 text-end pe-4">@Localizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <img src="@(string.IsNullOrEmpty(item.ProfilePictureUrl) ? $"https://ui-avatars.com/api/?name={item.FullName}&background=random&color=fff" : item.ProfilePictureUrl)"
                                            class="rounded-circle me-3" style="width: 40px; height: 40px; object-fit: cover;">
                                        <div>
                                            <div class="fw-bold">@item.FullName</div>
                                            <div class="text-muted small">ID: @item.UserId.Substring(0, 8)...</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (item.Type == FindMeHome.ViewModels.RequestType.SellerRegistration)
                                    {
                                        <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill px-3 py-2">
                                            <i class="fa-solid fa-user-plus me-1"></i> @Localizer["NewSellerRequest"]
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill px-3 py-2">
                                            <i class="fa-solid fa-certificate me-1"></i> @Localizer["VerificationRequest"]
                                        </span>
                                    }
                                </td>
                                <td>@item.Email</td>
                                <td class="text-end pe-4">
                                    @if (item.Type == FindMeHome.ViewModels.RequestType.SellerRegistration)
                                    {
                                        <form asp-action="ApproveSeller" method="post" class="d-inline">
                                            <input type="hidden" name="userId" value="@item.UserId" />
                                            <button type="submit" class="btn btn-primary btn-sm rounded-pill px-3 fw-bold">
                                                <i class="fa-solid fa-check me-1"></i> @Localizer["ApproveSeller"]
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <div class="d-flex gap-2 justify-content-end">
                                            <form asp-action="ApproveVerification" method="post">
                                                <input type="hidden" name="userId" value="@item.UserId" />
                                                <button type="submit" class="btn btn-success btn-sm rounded-pill px-3 fw-bold">
                                                    <i class="fa-solid fa-check-double me-1"></i> @Localizer["Verify"]
                                                </button>
                                            </form>
                                            <form asp-action="RejectVerification" method="post">
                                                <input type="hidden" name="userId" value="@item.UserId" />
                                                <button type="submit" class="btn btn-danger btn-sm rounded-pill px-3 fw-bold">
                                                    <i class="fa-solid fa-xmark me-1"></i> @Localizer["Reject"]
                                                </button>
                                            </form>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
