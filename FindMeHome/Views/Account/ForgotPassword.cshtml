@model FindMeHome.Dtos.ForgotPasswordDto
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="auth-container">
    <div class="col-md-5 col-lg-4">
        <div class="card auth-card border-0">
            <div class="auth-header">
                <div class="mb-3">
                    <i class="fa-solid fa-key fa-4x text-white-50"></i>
                </div>
                <h2 class="fw-bold mb-0">@Localizer["ForgotPassword"]</h2>
                <p class="mb-0 opacity-75 mt-2 fw-light">@Localizer["EnterEmailToReset"]</p>
            </div>
            <div class="card-body auth-body">
                <form asp-action="ForgotPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-floating form-floating-custom mb-4 position-relative">
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                        <label asp-for="Email">@Localizer["Email"]</label>
                        <i class="fa-solid fa-envelope input-icon"></i>
                        <span asp-validation-for="Email" class="text-danger small ms-2"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-auth text-white w-100">
                            @Localizer["Submit"]
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
