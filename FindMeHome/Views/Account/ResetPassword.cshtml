@model FindMeHome.Dtos.ResetPasswordDto
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = "Reset Password";
}

<div class="auth-container">
    <div class="col-md-5 col-lg-4">
        <div class="card auth-card border-0">
            <div class="auth-header">
                <div class="mb-3">
                    <i class="fa-solid fa-lock-open fa-4x text-white-50"></i>
                </div>
                <h2 class="fw-bold mb-0">@Localizer["ResetPassword"]</h2>
                <p class="mb-0 opacity-75 mt-2 fw-light">@Localizer["EnterNewPassword"]</p>
            </div>
            <div class="card-body auth-body">
                <form asp-action="ResetPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Token" type="hidden" />
                    <input asp-for="Email" type="hidden" />

                    <div class="form-floating form-floating-custom mb-3 position-relative">
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                        <label asp-for="Password">@Localizer["NewPassword"]</label>
                        <i class="fa-solid fa-lock input-icon"></i>
                        <span asp-validation-for="Password" class="text-danger small ms-2"></span>
                    </div>

                    <div class="form-floating form-floating-custom mb-4 position-relative">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                        <label asp-for="ConfirmPassword">@Localizer["ConfirmPassword"]</label>
                        <i class="fa-solid fa-lock input-icon"></i>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small ms-2"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-auth text-white w-100">
                            @Localizer["Reset"]
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
