@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = "Reset Password Confirmation";
}

<div class="auth-container">
    <div class="col-md-5 col-lg-4">
        <div class="card auth-card border-0">
            <div class="auth-header">
                <div class="mb-3">
                    <i class="fa-solid fa-circle-check fa-4x text-white-50"></i>
                </div>
                <h2 class="fw-bold mb-0">@Localizer["PasswordResetSuccess"]</h2>
            </div>
            <div class="card-body auth-body text-center">
                <p class="lead">
                    @Localizer["PasswordResetDone"]
                </p>
                <div class="mt-4">
                    <a asp-action="Login" class="btn btn-primary btn-auth text-white w-100">
                        @Localizer["LoginTitle"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
