@model FindMeHome.Dtos.RealEstateDto

@{
    ViewData["Title"] = Model.Title;
    var basePrice = Model.Price;
}

<div class="container py-5" dir="rtl">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">@Model.Title</h2>
            <p class="text-muted mb-0"><i class="fa-solid fa-location-dot me-2 text-primary"></i> @Model.Address, @Model.Neighborhood, @Model.City</p>
        </div>
        <div>
            <span class="badge bg-primary rounded-pill px-3 py-2 fs-6">@Model.UnitType</span>
            <span class="badge bg-dark rounded-pill px-3 py-2 fs-6">@(Model.ApartmentType == FindMeHome.Enums.ApartmentType.ForSale ? "للبيع" : "للإيجار")</span>
        </div>
    </div>

    <div class="row g-4">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Image Gallery -->
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-4">
                <div id="propertyCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @if (Model.Images != null && Model.Images.Any())
                        {
                            for (int i = 0; i < Model.Images.Count; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@Model.Images[i].ImageUrl" class="d-block w-100 object-fit-cover" style="height: 500px;" alt="صورة العقار">
                                </div>
                            }
                        }
                        else
                        {
                            <div class="carousel-item active">
                                <img src="/images/test1.png" class="d-block w-100 object-fit-cover" style="height: 500px;" alt="صورة افتراضية">
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#propertyCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#propertyCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>

            <!-- Details Cards -->
            <div class="card border-0 shadow-sm rounded-4 p-4 mb-4">
                <h4 class="fw-bold mb-4 border-bottom pb-2">تفاصيل العقار</h4>
                <div class="row g-4 text-center mb-4">
                    <div class="col-4">
                        <div class="p-3 bg-light rounded-3">
                            <i class="fa-solid fa-bed fs-3 text-primary mb-2"></i>
                            <h6 class="fw-bold mb-0">@Model.Rooms غرف</h6>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="p-3 bg-light rounded-3">
                            <i class="fa-solid fa-bath fs-3 text-info mb-2"></i>
                            <h6 class="fw-bold mb-0">@Model.Bathrooms حمام</h6>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="p-3 bg-light rounded-3">
                            <i class="fa-solid fa-ruler-combined fs-3 text-warning mb-2"></i>
                            <h6 class="fw-bold mb-0">@Model.Area م²</h6>
                        </div>
                    </div>
                </div>
                
                <h5 class="fw-bold mb-3">الوصف</h5>
                <p class="text-muted leading-relaxed">@Model.Description</p>
            </div>

            <!-- Furniture Section (if applicable) -->
            @if (Model.CanBeFurnished && Model.Furnitures != null && Model.Furnitures.Any())
            {
                <div class="card border-0 shadow-sm rounded-4 p-4 mb-4">
                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-success bg-opacity-10 p-2 rounded-circle me-3">
                            <i class="fa-solid fa-couch text-success fs-4"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold mb-0">أثاث إضافي متاح</h5>
                            <small class="text-muted">اختر القطع التي تريد إضافتها للعقار</small>
                        </div>
                    </div>

                    <div class="row g-3">
                        @foreach (var furniture in Model.Furnitures)
                        {
                            <div class="col-md-6">
                                <label class="card h-100 border-2 cursor-pointer furniture-card position-relative overflow-hidden" for="furniture_@furniture.Id">
                                    <div class="card-body d-flex align-items-center gap-3">
                                        <div class="form-check m-0">
                                            <input class="form-check-input furniture-checkbox fs-5" type="checkbox" 
                                                   value="@furniture.Price?.ToString(System.Globalization.CultureInfo.InvariantCulture)" 
                                                   id="furniture_@furniture.Id"
                                                   data-furniture-name="@furniture.Name">
                                        </div>
                                        @if (!string.IsNullOrEmpty(furniture.ImagePath))
                                        {
                                            <img src="@furniture.ImagePath" class="rounded-3 object-fit-cover" style="width: 60px; height: 60px;" alt="@furniture.Name">
                                        }
                                        <div class="flex-grow-1">
                                            <h6 class="fw-bold mb-1">@furniture.Name</h6>
                                            <span class="badge bg-success bg-opacity-10 text-success">+@furniture.Price?.ToString("#,##0", System.Globalization.CultureInfo.InvariantCulture) ج.م</span>
                                        </div>
                                    </div>
                                </label>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-lg rounded-4 p-4 sticky-top" style="top: 100px;">
                <h5 class="fw-bold text-muted mb-2">السعر الإجمالي</h5>
                <h2 class="fw-bold text-primary mb-4" id="totalPrice">@basePrice.ToString("#,##0", System.Globalization.CultureInfo.InvariantCulture) <small class="fs-5 text-muted">ج.م</small></h2>

                <div class="d-grid gap-3">
                    @if (!string.IsNullOrEmpty(Model.WhatsAppNumber))
                    {
                        <a href="#" target="_blank" id="whatsappLink" class="btn btn-success btn-lg rounded-pill fw-bold shadow-sm hover-scale">
                            <i class="fa-brands fa-whatsapp me-2"></i> تواصل عبر واتساب
                        </a>
                    }
                    
                    <button type="button" 
                            class="btn @(ViewBag.IsInWishlist == true ? "btn-danger" : "btn-outline-danger") btn-lg rounded-pill fw-bold shadow-sm hover-scale" 
                            id="wishlistBtn"
                            data-realestate-id="@Model.Id">
                        <i class="@(ViewBag.IsInWishlist == true ? "fa-solid" : "fa-regular") fa-heart me-2"></i> 
                        <span id="wishlistText">@(ViewBag.IsInWishlist == true ? "إزالة من المفضلة" : "إضافة للمفضلة")</span>
                    </button>
                </div>

                <hr class="my-4 opacity-10">

                <!-- Seller Information Section -->
                @if (Model.User != null)
                {
                    <div class="mb-4">
                        <h6 class="fw-bold text-muted mb-3"><i class="fa-solid fa-user-tie me-2"></i>معلومات البائع</h6>
                        <div class="d-flex align-items-center gap-3 mb-3">
                            <img src="@(string.IsNullOrEmpty(Model.User.ProfilePictureUrl) ? $"https://ui-avatars.com/api/?name={Model.User.FirstName}+{Model.User.LastName}&background=random&color=fff" : Model.User.ProfilePictureUrl)" 
                                 class="rounded-circle" 
                                 style="width: 50px; height: 50px; object-fit: cover;" 
                                 alt="صورة البائع">
                            <div>
                                <h6 class="fw-bold mb-0">@Model.User.FirstName @Model.User.LastName</h6>
                                <small class="text-muted">@Model.User.Email</small>
                            </div>
                        </div>
                        <button type="button" class="btn btn-outline-primary btn-sm rounded-pill w-100 fw-bold" data-bs-toggle="modal" data-bs-target="#sellerModal">
                            <i class="fa-solid fa-info-circle me-2"></i>تفاصيل عن البائع
                        </button>
                    </div>

                    <hr class="my-4 opacity-10">
                }

                <div class="d-flex align-items-center gap-3">
                    <div class="bg-light rounded-circle p-3">
                        <i class="fa-solid fa-shield-halved text-secondary fs-4"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-0">ضمان الجودة</h6>
                        <small class="text-muted">تم التحقق من صحة البيانات</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Seller Details Modal -->
@if (Model.User != null)
{
    <div class="modal fade" id="sellerModal" tabindex="-1" aria-labelledby="sellerModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg rounded-4">
                <div class="modal-header border-0 bg-gradient-primary text-white rounded-top-4" style="background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%);">
                    <h5 class="modal-title fw-bold" id="sellerModalLabel"><i class="fa-solid fa-user-circle me-2"></i>معلومات البائع</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="text-center mb-4">
                        <img src="@(string.IsNullOrEmpty(Model.User.ProfilePictureUrl) ? $"https://ui-avatars.com/api/?name={Model.User.FirstName}+{Model.User.LastName}&background=random&color=fff&size=150" : Model.User.ProfilePictureUrl)" 
                             class="rounded-circle shadow-sm mb-3" 
                             style="width: 120px; height: 120px; object-fit: cover; border: 4px solid #f8f9fa;" 
                             alt="صورة البائع">
                        <h4 class="fw-bold mb-1">@Model.User.FirstName @Model.User.LastName</h4>
                        @{
                            var verificationBadge = "";
                            var verificationText = "";
                            var verificationIcon = "";
                            
                            // Note: We need to fetch VerificationStatus from the User entity
                            // For now, we'll use a placeholder. In production, you'd pass this via ViewBag or extend UserDto
                            var isVerified = ViewBag.SellerVerificationStatus == FindMeHome.Enums.VerificationStatus.Verified;
                            
                            if (isVerified)
                            {
                                verificationBadge = "bg-success";
                                verificationText = "موثق";
                                verificationIcon = "fa-check-circle";
                            }
                            else
                            {
                                verificationBadge = "bg-secondary";
                                verificationText = "غير موثق";
                                verificationIcon = "fa-circle-xmark";
                            }
                        }
                        <span class="badge @verificationBadge bg-opacity-10 text-@(isVerified ? "success" : "secondary") rounded-pill px-3 py-2">
                            <i class="fa-solid @verificationIcon me-1"></i> @verificationText
                        </span>
                    </div>

                    <div class="mb-3">
                        <label class="small text-muted fw-bold mb-1"><i class="fa-solid fa-envelope me-2"></i>البريد الإلكتروني</label>
                        <p class="mb-0">@Model.User.Email</p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.WhatsAppNumber))
                    {
                        <div class="mb-3">
                            <label class="small text-muted fw-bold mb-1"><i class="fa-solid fa-phone me-2"></i>رقم الهاتف</label>
                            <p class="mb-0 d-flex align-items-center gap-2">
                                <span>@Model.WhatsAppNumber</span>
                                <a href="https://wa.me/@Model.WhatsAppNumber.Replace("+", "")" target="_blank" class="btn btn-success btn-sm rounded-pill px-3">
                                    <i class="fa-brands fa-whatsapp me-1"></i>واتساب
                                </a>
                            </p>
                        </div>
                    }
                </div>
                <div class="modal-footer border-0 bg-light rounded-bottom-4">
                    <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">إغلاق</button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .cursor-pointer { cursor: pointer; }
    
    .furniture-card {
        transition: all 0.2s ease;
        border-color: #dee2e6;
    }

    .furniture-checkbox:checked + .furniture-card,
    .furniture-card:has(.furniture-checkbox:checked) {
        border-color: #198754;
        background-color: #f8fffb;
    }

    .hover-scale {
        transition: transform 0.2s ease;
    }
    
    .hover-scale:hover {
        transform: scale(1.03);
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function() {
            // Use InvariantCulture to avoid comma/dot issues in JS
            const basePrice = @Model.Price.ToString(System.Globalization.CultureInfo.InvariantCulture);
            
            // Price Calculation
            $('.furniture-checkbox').on('change', function() {
                let selectedFurniturePrice = 0;
                $('.furniture-checkbox:checked').each(function() {
                    // Ensure we parse the float correctly regardless of UI display
                    selectedFurniturePrice += parseFloat($(this).val());
                });

                const totalPrice = basePrice + selectedFurniturePrice;
                
                // Update Price Display
                const formattedPrice = new Intl.NumberFormat('en-US').format(totalPrice);
                $('#totalPrice').html(formattedPrice + ' <small class="fs-5 text-muted">ج.م</small>');
                
                // Optional: visual feedback
                if (selectedFurniturePrice > 0) {
                     $('#totalPrice').addClass('text-success').removeClass('text-primary');
                } else {
                     $('#totalPrice').addClass('text-primary').removeClass('text-success');
                }

                updateWhatsAppLink();
            });

            // WhatsApp Link Updater
            function updateWhatsAppLink() {
                const currentUrl = window.location.href;
                // Remove + and spaces from phone number
                const whatsappNumber = '@(Model.WhatsAppNumber?.Replace("+", "").Replace(" ", "") ?? "")';
                
                let selectedFurniture = [];
                $('.furniture-checkbox:checked').each(function() {
                    selectedFurniture.push($(this).data('furniture-name'));
                });
                
                let text = `مرحباً، أنا مهتم بهذا العقار: ${currentUrl}`;
                if (selectedFurniture.length > 0) {
                    text += `\n مع الأثاث التالي: ${selectedFurniture.join(", ")}`;
                }
                
                $('#whatsappLink').attr('href', `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(text)}`);
            }
            updateWhatsAppLink();

            // Wishlist Logic
            $('#wishlistBtn').on('click', function() {
                const btn = $(this);
                const id = btn.data('realestate-id');
                const isAdded = btn.hasClass('btn-danger');
                const url = isAdded ? `/RealEstate/RemoveFromWishlist/${id}` : `/RealEstate/AddToWishlist/${id}`;

                $.post(url, function(response) {
                    if (response.isSuccess) {
                        if (isAdded) {
                            btn.removeClass('btn-danger').addClass('btn-outline-danger');
                            btn.find('i').removeClass('fa-solid').addClass('fa-regular');
                            $('#wishlistText').text('إضافة للمفضلة');
                        } else {
                            btn.removeClass('btn-outline-danger').addClass('btn-danger');
                            btn.find('i').removeClass('fa-regular').addClass('fa-solid');
                            $('#wishlistText').text('إزالة من المفضلة');
                        }
                        
                        // Update Navbar Count
                        if (response.count !== undefined) {
                            $('#wishlistCount').text(response.count);
                        }
                        
                        const Toast = Swal.mixin({
                            toast: true,
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 3000,
                            timerProgressBar: true
                        });
                        
                        Toast.fire({
                            icon: 'success',
                            title: response.message
                        });
                    } else {
                        if(response.message.includes("تسجيل الدخول")) {
                             window.location.href = '/Account/Login';
                        } else {
                            Swal.fire({ icon: 'error', title: 'خطأ', text: response.message });
                        }
                    }
                });
            });
        });
    </script>
}

