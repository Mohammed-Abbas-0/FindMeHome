
@model FindMeHome.Dtos.PagedResultDto<FindMeHome.Dtos.RealEstateDto>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["DiscoverNewHome"];
}

<div class="container-fluid py-5 bg-light">
    <div class="row g-4">
        <!-- Sidebar Filter -->
        <aside class="col-lg-3">
            <div class="card border-0 shadow-sm rounded-4 p-4 sticky-top" style="top: 100px; z-index: 90;">
                <div class="d-flex align-items-center mb-4">
                    <i class="fa-solid fa-filter text-primary me-2 fs-4"></i>
                    <h5 class="fw-bold m-0">@Localizer["FilterResults"]</h5>
                </div>
                
                <form asp-controller="RealEstate" asp-action="AdvancedSearch" method="get">
                    <!-- Search Query -->
                    <div class="mb-3">
                        <label class="form-label fw-bold text-muted small">@Localizer["GeneralSearch"]</label>
                        <input type="text" class="form-control rounded-3 bg-light border-0" name="query" value="@ViewBag.Query" placeholder="@Localizer["SearchPlaceholder"]" />
                    </div>

                    <!-- Location Autocomplete -->
                    <div class="mb-3 position-relative">
                        <label class="form-label fw-bold text-muted small">@Localizer["Location"]</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0"><i class="fa-solid fa-map-marker-alt text-danger"></i></span>
                            <input type="text" id="locationInput" class="form-control rounded-3 bg-light border-0" name="location" value="@ViewBag.Location" placeholder="@Localizer["LocationSearchPlaceholder"]" autocomplete="off" />
                        </div>
                        <ul id="locationSuggestions" class="list-group position-absolute w-100 shadow-sm mt-1" style="z-index: 1000; display: none; max-height: 200px; overflow-y: auto;"></ul>
                    </div>

                    <!-- Price Range -->
                    <div class="mb-3">
                        <label class="form-label fw-bold text-muted small">@Localizer["PriceRange"]</label>
                        <div class="d-flex gap-2">
                            <input type="number" class="form-control rounded-3 bg-light border-0" name="priceFrom" value="@(ViewBag.PriceFrom != null ? ((decimal)ViewBag.PriceFrom).ToString("G0") : "")" placeholder="@Localizer["From"]" />
                            <input type="number" class="form-control rounded-3 bg-light border-0" name="priceTo" value="@(ViewBag.PriceTo != null ? ((decimal)ViewBag.PriceTo).ToString("G0") : "")" placeholder="@Localizer["To"]" />
                        </div>
                    </div>

                    <!-- Area Range -->
                    <div class="mb-3">
                        <label class="form-label fw-bold text-muted small">@Localizer["Area"]</label>
                        <div class="d-flex gap-2">
                            <input type="number" class="form-control rounded-3 bg-light border-0" name="areaFrom" value="@ViewBag.AreaFrom" placeholder="@Localizer["From"]" />
                            <input type="number" class="form-control rounded-3 bg-light border-0" name="areaTo" value="@ViewBag.AreaTo" placeholder="@Localizer["To"]" />
                        </div>
                    </div>

                    <!-- Rooms & Bathrooms -->
                    <div class="mb-3">
                        <label class="form-label fw-bold text-muted small">@Localizer["RoomsAndBathrooms"]</label>
                        <div class="d-flex gap-2">
                            <input type="number" class="form-control rounded-3 bg-light border-0" name="rooms" value="@ViewBag.Rooms" placeholder="@Localizer["Rooms"]" />
                            <input type="number" class="form-control rounded-3 bg-light border-0" name="bathrooms" value="@ViewBag.Bathrooms" placeholder="@Localizer["Bathrooms"]" />
                        </div>
                    </div>

                    <!-- Unit Type -->
                    <div class="mb-3">
                        <label class="form-label fw-bold text-muted small">@Localizer["UnitType"]</label>
                        <select class="form-select rounded-3 bg-light border-0" name="unitType" asp-items="Html.GetEnumSelectList<FindMeHome.Enums.UnitType>()">
                            <option value="">@Localizer["All"]</option>
                        </select>
                    </div>

                    <!-- Furnished Checkbox -->
                    <div class="form-check mb-4">
                        <input class="form-check-input" type="checkbox" name="isFurnished" value="true" id="checkFurnished" @(ViewBag.IsFurnished == true ? "checked" : "")>
                        <label class="form-check-label small fw-bold" for="checkFurnished">
                            @Localizer["FurnishedOption"]
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 rounded-3 fw-bold py-2 shadow-sm hover-scale">
                        <i class="fa-solid fa-magnifying-glass me-2"></i> @Localizer["AdvancedSearch"]
                    </button>
                    <a asp-action="Index" class="btn btn-link w-100 text-decoration-none text-muted small mt-2">@Localizer["Reset"]</a>
                </form>
            </div>
        </aside>

        <!-- Listings -->
        <section class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold mb-1">@Localizer["FeaturedProperties"]</h2>
                    <p class="text-muted m-0">@string.Format(Localizer["FindPropertyText"], Model.TotalCount)</p>
                </div>
                <!-- Wishlist button removed as requested -->
            </div>

            <div class="row g-4">
                @foreach (var item in Model.Items)
                {
                    <div class="col-xl-4 col-md-6">
                        <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden property-card">
                            <!-- Image Section -->
                            <div class="position-relative image-wrapper">
                                <img src="@(item.Images?.FirstOrDefault()?.ImageUrl ?? "/images/test1.png")" 
                                     class="card-img-top h-100 w-100 object-fit-cover" 
                                     alt="@item.Title">
                                
                                <!-- Badges -->
                                <div class="position-absolute top-0 start-0 p-3 d-flex gap-2" style="z-index: 10;">
                                    <span class="badge bg-dark bg-opacity-75 backdrop-blur rounded-pill px-3 py-2">
                                        @item.UnitType
                                    </span>
                                    @if (item.CanBeFurnished)
                                    {
                                        <span class="badge bg-success bg-opacity-75 backdrop-blur rounded-pill px-3 py-2">
                                            <i class="fa-solid fa-couch me-1"></i> @Localizer["Furnished"]
                                        </span>
                                    }
                                </div>

                                <!-- Wishlist Button -->
                                @{
                                    var wishlistIds = ViewBag.WishlistIds as List<int> ?? new List<int>();
                                    var isInWishlist = wishlistIds.Contains(item.Id);
                                    var heartClass = isInWishlist ? "fa-solid fa-heart text-danger" : "fa-regular fa-heart text-dark";
                                }
                                <button type="button" class="btn btn-light rounded-circle position-absolute top-0 end-0 m-3 shadow-sm wishlist-btn d-flex align-items-center justify-content-center" 
                                        style="width: 40px; height: 40px; z-index: 100;"
                                        data-id="@item.Id">
                                    <i class="@heartClass fs-5" id="heart-@item.Id"></i>
                                </button>

                                <!-- Overlay -->
                                <div class="overlay d-flex align-items-center justify-content-center gap-3">
                                    <a asp-controller="RealEstate" asp-action="Details" asp-route-id="@item.Id" 
                                        class="btn btn-light rounded-pill px-4 fw-bold shadow hover-scale">
                                        <i class="fa-solid fa-eye me-2"></i> @Localizer["Details"]
                                    </a>
                                </div>
                            </div>

                            <!-- Content Section -->
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title fw-bold text-truncate mb-0" style="max-width: 70%;">@item.Title</h5>
                                    <h5 class="text-primary fw-bold mb-0">@item.Price.ToString("#,##0", System.Globalization.CultureInfo.InvariantCulture) <small class="fs-6 text-muted">ج.م</small></h5>
                                </div>
                                
                                <p class="text-muted small mb-3">
                                    <i class="fa-solid fa-location-dot me-1 text-secondary"></i> @item.Neighborhood, @item.City
                                </p>

                                <!-- Features -->
                                <div class="d-flex justify-content-between bg-light rounded-3 p-3 mb-3">
                                    <div class="text-center">
                                        <i class="fa-solid fa-bed text-muted mb-1 d-block"></i>
                                        <span class="fw-bold small">@item.Rooms @Localizer["Rooms"]</span>
                                    </div>
                                    <div class="vr opacity-25"></div>
                                    <div class="text-center">
                                        <i class="fa-solid fa-bath text-muted mb-1 d-block"></i>
                                        <span class="fw-bold small">@item.Bathrooms @Localizer["Bathrooms"]</span>
                                    </div>
                                    <div class="vr opacity-25"></div>
                                    <div class="text-center">
                                        <i class="fa-solid fa-ruler-combined text-muted mb-1 d-block"></i>
                                        <span class="fw-bold small">@item.Area @Localizer["Area"]</span>
                                    </div>
                                </div>

                                <!-- Likes Section -->
                                @{
                                    var likedIds = ViewBag.LikedIds as List<int> ?? new List<int>();
                                    var isLiked = likedIds.Contains(item.Id);
                                    var likeHeartClass = isLiked ? "fa-solid fa-heart text-danger" : "fa-regular fa-heart text-muted";
                                }
                                <div class="d-flex align-items-center gap-2 mb-3 pb-3 border-bottom">
                                    <button type="button" class="btn btn-sm btn-light rounded-circle like-btn d-flex align-items-center justify-content-center" 
                                            style="width: 36px; height: 36px;"
                                            data-id="@item.Id">
                                        <i class="@likeHeartClass fs-5" id="like-heart-@item.Id"></i>
                                    </button>
                                    <span class="text-muted small">
                                        <span id="likes-count-@item.Id">@item.LikesCount</span> إعجاب
                                    </span>
                                </div>

                                <!-- Actions -->
                                <div class="d-flex gap-2">
                                    @if (!string.IsNullOrEmpty(item.WhatsAppNumber))
                                    {
                                        var detailsUrl = Url.Action("Details", "RealEstate", new { id = item.Id }, Context.Request.Scheme);
                                        <a href="https://wa.me/@(item.WhatsAppNumber.Replace("+", "").Replace(" ", ""))?text=@Uri.EscapeDataString(detailsUrl)" 
                                            target="_blank" 
                                            class="btn btn-success w-100 rounded-3 fw-bold">
                                            <i class="fa-brands fa-whatsapp me-2"></i> @Localizer["WhatsApp"]
                                        </a>
                                    }
                                    <a asp-controller="RealEstate" asp-action="Details" asp-route-id="@item.Id" 
                                        class="btn btn-outline-dark w-100 rounded-3 fw-bold">
                                        @Localizer["More"]
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            </div>
            
            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-5">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link rounded-pill px-3 mx-1" 
                               asp-action="@(ViewContext.RouteData.Values["action"])" 
                               asp-route-page="@(Model.PageNumber - 1)"
                               asp-route-query="@ViewBag.Query"
                               asp-route-priceFrom="@ViewBag.PriceFrom"
                               asp-route-priceTo="@ViewBag.PriceTo"
                               asp-route-areaFrom="@ViewBag.AreaFrom"
                               asp-route-areaTo="@ViewBag.AreaTo"
                               asp-route-rooms="@ViewBag.Rooms"
                               asp-route-bathrooms="@ViewBag.Bathrooms"
                               asp-route-unitType="@ViewBag.UnitType"
                               asp-route-isFurnished="@ViewBag.IsFurnished"
                               asp-route-city="@ViewBag.City"
                               asp-route-neighborhood="@ViewBag.Neighborhood"
                               asp-route-location="@ViewBag.Location">
                                <i class="fa-solid fa-chevron-right"></i> @Localizer["Previous"]
                            </a>
                        </li>
                        
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link rounded-pill px-3 mx-1" 
                                   asp-action="@(ViewContext.RouteData.Values["action"])" 
                                   asp-route-page="@i"
                                   asp-route-query="@ViewBag.Query"
                                   asp-route-priceFrom="@ViewBag.PriceFrom"
                                   asp-route-priceTo="@ViewBag.PriceTo"
                                   asp-route-areaFrom="@ViewBag.AreaFrom"
                                   asp-route-areaTo="@ViewBag.AreaTo"
                                   asp-route-rooms="@ViewBag.Rooms"
                                   asp-route-bathrooms="@ViewBag.Bathrooms"
                                   asp-route-unitType="@ViewBag.UnitType"
                                   asp-route-isFurnished="@ViewBag.IsFurnished"
                                   asp-route-city="@ViewBag.City"
                                   asp-route-neighborhood="@ViewBag.Neighborhood"
                                   asp-route-location="@ViewBag.Location">
                                    @i
                                </a>
                            </li>
                        }

                        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                            <a class="page-link rounded-pill px-3 mx-1" 
                               asp-action="@(ViewContext.RouteData.Values["action"])" 
                               asp-route-page="@(Model.PageNumber + 1)"
                               asp-route-query="@ViewBag.Query"
                               asp-route-priceFrom="@ViewBag.PriceFrom"
                               asp-route-priceTo="@ViewBag.PriceTo"
                               asp-route-areaFrom="@ViewBag.AreaFrom"
                               asp-route-areaTo="@ViewBag.AreaTo"
                               asp-route-rooms="@ViewBag.Rooms"
                               asp-route-bathrooms="@ViewBag.Bathrooms"
                               asp-route-unitType="@ViewBag.UnitType"
                               asp-route-isFurnished="@ViewBag.IsFurnished"
                               asp-route-city="@ViewBag.City"
                               asp-route-neighborhood="@ViewBag.Neighborhood"
                               asp-route-location="@ViewBag.Location">
                                @Localizer["Next"] <i class="fa-solid fa-chevron-left"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </section>
    </div>
</div>

<!-- Legal Guidelines Fixed Button -->
<div class="fixed-guidelines-btn">
    <button type="button" class="btn btn-warning rounded-circle shadow-lg d-flex align-items-center justify-content-center" 
            data-bs-toggle="modal" data-bs-target="#legalGuidelinesModal"
            title="الإرشادات القانونية">
        <i class="fa-solid fa-scale-balanced fs-3 text-white"></i>
    </button>
    <span class="guidelines-tooltip">دليل قانوني</span>
</div>

<partial name="_LegalGuidelinesModal" />

<style>
    .property-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .property-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,.175)!important;
    }

    .image-wrapper {
        height: 250px;
        overflow: hidden;
    }

    .image-wrapper img {
        transition: transform 0.5s ease;
    }

    .property-card:hover .image-wrapper img {
        transform: scale(1.1);
    }

    .overlay {
        position: absolute;
        inset: 0;
        background: rgba(0,0,0,0.4);
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: 5; /* Ensure overlay is below wishlist button */
    }

    .property-card:hover .overlay {
        opacity: 1;
    }

    .backdrop-blur {
        backdrop-filter: blur(5px);
    }

    .hover-scale {
        transition: transform 0.2s;
    }
    
    .hover-scale:hover {
        transform: scale(1.05);
    }

    /* Fixed Guidelines Button Styles */
    .fixed-guidelines-btn {
        position: fixed;
        bottom: 30px;
        left: 30px; /* Left side for RTL layout usually, or adjust based on preference */
        z-index: 1000;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    /* Adjust for RTL if needed, assuming site is RTL based on context */
    [dir="rtl"] .fixed-guidelines-btn {
        left: 30px;
        right: auto;
    }
    
    [dir="ltr"] .fixed-guidelines-btn {
        right: 30px;
        left: auto;
    }

    .fixed-guidelines-btn button {
        width: 60px;
        height: 60px;
        border: 4px solid rgba(255, 255, 255, 0.5);
        background: linear-gradient(45deg, #ffc107, #ff9800);
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        animation: pulse-glow 2s infinite;
    }

    .fixed-guidelines-btn button:hover {
        transform: scale(1.1) rotate(10deg);
        border-color: white;
    }

    .guidelines-tooltip {
        background: white;
        padding: 5px 15px;
        border-radius: 20px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        font-weight: bold;
        color: #555;
        opacity: 0;
        transform: translateX(20px);
        transition: all 0.3s ease;
        pointer-events: none;
    }

    .fixed-guidelines-btn:hover .guidelines-tooltip {
        opacity: 1;
        transform: translateX(0);
    }

    @@keyframes pulse-glow {
        0% {
            box-shadow: 0 0 0 0 rgba(255, 193, 7, 0.7);
        }
        70% {
            box-shadow: 0 0 0 15px rgba(255, 193, 7, 0);
        }
        100% {
            box-shadow: 0 0 0 0 rgba(255, 193, 7, 0);
        }
    }

    /* Like Button Animation */
    .animate-like {
        animation: likeAnimation 0.6s ease-in-out;
    }

    @@keyframes likeAnimation {
        0% {
            transform: scale(1);
        }
        25% {
            transform: scale(1.3) rotate(-10deg);
        }
        50% {
            transform: scale(1.4) rotate(10deg);
        }
        75% {
            transform: scale(1.2) rotate(-5deg);
        }
        100% {
            transform: scale(1) rotate(0deg);
        }
    }

    .like-btn {
        transition: all 0.2s ease;
    }

    .like-btn:hover {
        transform: scale(1.1);
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Location Autocomplete
            const locationInput = $('#locationInput');
            const suggestionsList = $('#locationSuggestions');
            let debounceTimer;

            locationInput.on('input', function() {
                const term = $(this).val();
                clearTimeout(debounceTimer);

                if (term.length < 2) {
                    suggestionsList.hide();
                    return;
                }

                debounceTimer = setTimeout(() => {
                    $.get('/RealEstate/GetLocations', { term: term }, function(data) {
                        suggestionsList.empty();
                        if (data && data.length > 0) {
                            data.forEach(item => {
                                const icon = item.type === 'City' ? 'fa-city' : 'fa-map-pin';
                                const badgeClass = item.type === 'City' ? 'bg-primary' : 'bg-secondary';
                                const typeLabel = item.type === 'City' ? '@Localizer["City"]' : '@Localizer["Neighborhood"]';
                                
                                suggestionsList.append(`
                                    <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" style="cursor: pointer;">
                                        <div>
                                            <i class="fa-solid ${icon} me-2 text-muted"></i>
                                            <span class="fw-bold">${item.name}</span>
                                            <small class="text-muted ms-2">(${typeLabel})</small>
                                        </div>
                                        <span class="badge ${badgeClass} rounded-pill">${item.count}</span>
                                    </li>
                                `);
                            });
                            suggestionsList.show();
                        } else {
                            suggestionsList.hide();
                        }
                    });
                }, 300);
            });

            suggestionsList.on('click', 'li', function() {
                const text = $(this).find('.fw-bold').text();
                locationInput.val(text);
                suggestionsList.hide();
            });

            $(document).on('click', function(e) {
                if (!$(e.target).closest('#locationInput').length && !$(e.target).closest('#locationSuggestions').length) {
                    suggestionsList.hide();
                }
            });

            // Wishlist button functionality
            $(document).on('click', '.wishlist-btn', function (e) {
                e.preventDefault();
                e.stopPropagation();
                
                var btn = $(this);
                var id = btn.data('id');
                var icon = btn.find('i');
                var isAdded = icon.hasClass('fa-solid');
                var url = isAdded ? '/RealEstate/RemoveFromWishlist/' + id : '/RealEstate/AddToWishlist/' + id;

                console.log('Wishlist button clicked', id);
                $.post(url, function (response) {
                    console.log('Response:', response);
                    if (response.isSuccess) {
                        if (isAdded) {
                            icon.removeClass('fa-solid fa-heart text-danger').addClass('fa-regular fa-heart text-dark');
                        } else {
                            icon.removeClass('fa-regular fa-heart text-dark').addClass('fa-solid fa-heart text-danger');
                        }
                        
                        // Update Navbar Count
                        if (response.count !== undefined) {
                            $('#wishlistCount').text(response.count);
                        }
                    } else {
                        console.error('Error message:', response.message);
                        alert(response.message);
                        if (response.message.includes("تسجيل الدخول")) {
                            window.location.href = '/Account/Login';
                        }
                    }
                }).fail(function(xhr, status, error) {
                    console.error('AJAX Error:', status, error);
                    console.log('Response Text:', xhr.responseText);
                    alert('حدث خطأ أثناء الاتصال بالخادم');
                });
            });

            // Like button functionality
            $(document).on('click', '.like-btn', function (e) {
                e.preventDefault();
                e.stopPropagation();
                
                var btn = $(this);
                var id = btn.data('id');
                var icon = $('#like-heart-' + id);
                var isLiked = icon.hasClass('fa-solid');
                var url = isLiked ? '/RealEstate/UnlikeProperty/' + id : '/RealEstate/LikeProperty/' + id;
                
                console.log('Like button clicked', id);
                $.post(url, function (response) {
                    console.log('Response:', response);
                    if (response.isSuccess) {
                        if (isLiked) {
                            icon.removeClass('fa-solid fa-heart text-danger').addClass('fa-regular fa-heart text-muted');
                        } else {
                            icon.removeClass('fa-regular fa-heart text-muted').addClass('fa-solid fa-heart text-danger');
                            // Add animation
                            icon.addClass('animate-like');
                            setTimeout(function() {
                                icon.removeClass('animate-like');
                            }, 600);
                        }
                        
                        // Update likes count
                        if (response.count !== undefined) {
                            $('#likes-count-' + id).text(response.count);
                        }
                    } else {
                        console.error('Error message:', response.message);
                        alert(response.message);
                        if (response.message.includes("تسجيل الدخول")) {
                            window.location.href = '/Account/Login';
                        }
                    }
                }).fail(function(xhr, status, error) {
                    console.error('AJAX Error:', status, error);
                    console.log('Response Text:', xhr.responseText);
                    alert('حدث خطأ أثناء الاتصال بالخادم');
                });
            });

            // Load likes count loop removed as it is now handled server-side
        });
    </script>
}
